<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pdftron_color_primary_day</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark_day</item>
        <item name="colorAccent">@color/app_color_accent</item>

        <!--If using non-NoActionBar theme as parent, uncomment below-->
        <!--Disable action bar start-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--Disable action bar end-->
    </style>

    <style name="NewUiAppTheme" parent="PDFTronAppTheme">
        <item name="colorPrimary">@color/pdftron_color_primary_day</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark_day</item>
        <item name="colorAccent">@color/app_color_accent</item>
    </style>

    <!--
        This theme is used by the drop-in components. Define CustomAppTheme to customize the
        appearance of the PDFTron Android drop-in components.
    -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
