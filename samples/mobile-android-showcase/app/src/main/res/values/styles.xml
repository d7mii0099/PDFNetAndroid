<resources>

    <!-- Base application day night theme-->
    <style name="AppTheme.DayNight" parent="AppTheme.Light"/>

    <!-- Base application light theme. -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorLightBackground</item>

    </style>

    <!-- Base application dark theme. -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_color_primary_night</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark_night</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="CustomAppTheme" parent="CustomAppThemeBase">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
    </style>

    <style name="ComparisonTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorLightBackground</item>
    </style>

    <style name="MainTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="BottomSheetStyle" parent="AppTheme.DayNight">
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomSheetControlButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@drawable/selector_color_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableTint">@color/selector_colors</item>
        <item name="rippleColor">@color/colorButtonSelectedRipple</item>
        <item name="backgroundTint">@color/selector_bottomsheet_button_background</item>
        <item name="android:paddingEnd">60dp</item>
        <item name="android:paddingStart">60dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:minWidth">@dimen/bottomsheet_button_width</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="RadioButtonStyle" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/background_radio_button</item>
    </style>

    <style name="CustomMeasureStyle" parent="RulerStyle1">
        <item name="annot_thickness">2</item>
        <item name="annot_thickness_max">10</item>
        <item name="ruler_base_value">0.38</item>
        <item name="ruler_base_unit">in</item>
        <item name="ruler_translate_value">1</item>
        <item name="ruler_translate_unit">ft</item>
        <item name="ruler_precision">100</item>
    </style>

</resources>
