<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/user_icon_background"
        android:layout_width="@dimen/reply_icon_size"
        android:layout_height="@dimen/reply_icon_size"
        android:layout_gravity="center"
        android:src="@drawable/ic_circle_black_24dp"
        tools:tint="#3F51B5" />

    <TextView
        android:id="@+id/user_icon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/tools_colors_white"
        tools:text="BF" />

</FrameLayout>
